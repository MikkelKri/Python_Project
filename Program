#sort by the pubmed id
def sort_key(row):
    return row[2]
pubmedtmp.sort(key = sort_key)



#inserting PubmeID into dict
pubmeID={}
for item in pubmedtmp:
	if item[2] not in pubmeID:
		pubmeID[item[2]] = {}
#print(pubmeID)

